<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MigrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MIGRATION TOOL"
                android:textAlignment="center"
                android:textSize="24sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이 도구는 '마나모아'를 소스 사이트로 사용하면서 생성된 오프라인 기록들을 '뉴토끼'에 맞게 업데이트 해줍니다."
                android:textAlignment="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어떻게?"
                android:textAlignment="center"
                android:textSize="22sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기록에 남아있는 제목으로 뉴토끼에서 동일한 만화를 찾아줍니다. (*사이트에 없는 만화일 경우 삭제되므로 주의)"
                android:textSize="20sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그래도 불안하니 백업하고 싶어요"
                android:textAlignment="center"
                android:textSize="22sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="밑에 있는 백업버튼을 눌러서 저장위치를 선택하면 마나모아의 기록을 파일로 저장할 수 있습니다. 저장한 파일은 언제든 다시 읽어들일수 있습니다."
                android:textSize="20sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="잠정 삭제된 기능들"
                android:textAlignment="center"
                android:textSize="22sp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="고급검색, 계정(로그인), 메인 탭 일부 기능 등"
                android:textSize="20sp"/>

            <Button
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/migrate_proceed"
                android:background="@drawable/button_bg"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="업데이트 시작" />

            <Button
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/migrate_backup"
                android:background="@drawable/button_bg"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이터 백업" />

            <Button
                android:layout_margin="8dp"
                android:id="@+id/migrate_reset"
                android:background="@drawable/button_bg"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이터 초기화후 사용" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>